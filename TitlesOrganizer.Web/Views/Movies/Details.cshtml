@model TitlesOrganizer.Web.Models.Movie

@{
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>
<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OriginalTitle)
        </dt>
        <dd class = "col-sm-10">
            <i>@Html.DisplayFor(model => model.OriginalTitle)</i>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genres)
        </dt>
        <dd class="col-sm-10">
            @{
                string categories = string.Join("/", Model.Genres);
            }
            @categories
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Directors)
        </dt>
        <dd class="col-sm-10">
            @{
                string directors = string.Join(", ", Model.Directors);
            }
            @directors
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Countries)
        </dt>
        <dd class="col-sm-10">
            @{
                string countries = string.Join(", ", Model.Countries);
            }
            @countries
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
