@model TitlesOrganizer.Application.ViewModels.BookVMs.AuthorVM

@{
    if (string.IsNullOrWhiteSpace(Model.BookTitle))
    {
        ViewData["Title"] = "Add new author";
    }
    else
    {
        ViewData["Title"] = "Add new author for \"" + Model.BookTitle + "\"";
    }
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewAuthor" asp-formhelper="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <input asp-for="BookId" type="hidden" />
            <input asp-for="BookTitle" type="hidden" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (Model.Id == default)
{
    <div>
        <a asp-action="Authors">Back to authors list</a>
    </div>
}
else
{
    <div>
        <a asp-action="SelectAuthorsForBook" asp-route-id="@Model.BookId">Back to selecting authors</a>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
