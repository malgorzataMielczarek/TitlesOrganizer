@model TitlesOrganizer.Application.ViewModels.BookVMs.SeriesDetailsVM
@{
    ViewData["Title"] = Model.Title;
}
@Html.AntiForgeryToken()
<div class="container w-100 p-0" id="seriesDetails">
    <h1 class="mb-0 align-bottom text-wrap w-100">@Model.Title</h1>
    <input type="hidden" asp-for="@Model.Id" id="seriesId" name="seriesId" />
    <div class="px-1">
        <nav class="nav">
            @foreach (var author in Model.Authors)
            {
                <h3 class="px-0"><a asp-action="AuthorDetails" asp-route-id="@author.Id" class="nav-link px-2">@author.Description</a></h3>
            }
        </nav>
    </div>
    <div class="accordion" id="accordionExample">
        <div class="card px-0">
            <div class="card-header" id="headingOne">
                <h2 class="mb-0">
                    <button class="btn btn-block text-left text-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                        Book series description
                    </button>
                </h2>
            </div>

            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                <div class="card-body">
                    <p class="text-justify" style="white-space: pre-line;">@Model.Description</p>
                </div>
            </div>
        </div>
        <div class="card px-0">
            <div class="card-header" id="headingTwo">
                <h2 class="mb-0">
                    <button class="btn btn-block text-left text-primary collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        Book series details
                    </button>
                </h2>
            </div>
            <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.OriginalTitle)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.OriginalTitle)
                        </dd>
                    </dl>
                    <div class="py-2" id="booksPartial">
                        <partial name="_BooksPartial.cshtml" model="@Model.Books" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="p-4">
        @foreach (var genre in Model.Genres)
        {
            <a type="button" asp-action="GenreDetails" asp-route-id="@genre.Id" class="btn btn-outline-primary m-1">@genre.Description</a>
        }
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/Books/SeriesDetailsScript.js"></script>
}
